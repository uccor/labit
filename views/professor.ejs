<div class="bkd">
    <div class="container bkdW" ng-controller="update_PdfsController">
        <table class="table table-striped table-hover table-condensed">
                <caption> Archivos Subidos</caption>
            <thead>
            <tr>
                <th>#</th>
                <th>Nombre del Archivo</th>
                <th> Compartido </th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="pdf in pdfs">
                <td>{{ pdf.id }}</td>
                <td>{{ pdf.nombre }}</td>
                <td class="text-center">
                        <span class="glyphicon glyphicon-list-alt" ng-click="share(pdf.id,pdf.ruta)"></span>
                    <img src="images/ico_pdf.png">

                </td>
            </tr>
            </tbody>
        </table>
            <p> Compartiendo Archivo: {{radioButtonState}} </p>
            <p> Ruta para mostrar PDF: {{pdf_route}} </p>
    </div>
</div>

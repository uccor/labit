<div class="bkd" ng-app="app_getPdfs">
    <div class="container bkdW" ng-controller="update_PdfsController">
        <div class="container bkdW" ng-controller="share_PdfsController">
            <table class="table table-striped table-hover">
                <caption> Archivos Subidos</caption>
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre del Archivo</th>
                    <th> Compartido </th>
                </tr>
                </thead>
                <tbody>

                <tr ng-repeat="pdf in pdfs">
                    <td>{{ pdf.id }}</td>
                    <td>{{ pdf.nombre }}</td>
                    <td>
                            <label>
                                <input type="radio" name="comp" id="rad2" value="2" ng-model="radioButtonState" ng-click="share(pdf.id,pdf.ruta)">
                            </label>
                    </td>
                </tr>
                </tbody>
            </table>
            <p> Compartiendo Archivo: {{radioButtonState}} </p>
            <p> Ruta para mostrar PDF: {{pdf_route}} </p>
        </div>
    </div>




 </div>

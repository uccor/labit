<head>
    <title>Página Administración</title>
</head>

<div ng-controller="professorManager" id="professorManager">
    <div class="page-header" align="center" style="margin-top: 0px">

        <b class="titulos">
            Página de Administración del Profesor
        </b>
        <img src="/images/logo_labit.png" alt="..." class="logo">

        <div class="container-fluid">
            <!-- Navigation Bar -->
            <div class="row">
                <div class="col-md-2 col-md-push-10">
                    <button id="finishClass" class="btn btn-danger" ng-click="finishClass()">Finalizar Clase</button>
                </div>
                <div class="col-md-10 col-md-pull-2">
                    <ul class="nav nav-tabs pestanas" role="tablist" ng-controller="professorTab">
                        <%//<li ng-class="{active:isActive('/')}"><a href="#">Subir Archivo</a></li>%>
                        <li ng-class="{active:isActive('/fileShare')}"><a href="#fileShare">Compartir Archivo</a></li>
                        <li ng-class="{active:isActive('/makeQuestion')}"><a href="#makeQuestion">Hacer Pregunta</a></li>
                        <li ng-class="{active:isActive('/ConnectedStudents')}"><a href="#ConnectedStudents">Asistencia</a></li>
                        <li ng-class="{active:isActive('/viewQuestion')}"><a href="#viewQuestion">Ver Pregunta</a></li>
                    </ul>
                </div>
            </div>

            <div style="background: white;">

                <!-- All the content that can be selected -->
                <div class=" row">
                    <div class="col-md-8" align="center" ng-view style="background: white;min-height: 100%;">
                        <!-- Variable content-->
                    </div>
                    <div class="col-md-4">
                        <!--Right content-->
                    </div>
                </div>

            </div>

        </div>
    </div>


    <!-- Footer Controls (mostly content sharing controls)-->
    <div class="navbar navbar-default navbar-fixed-bottom " ng-controller="professorManagerFooter">
        <div class="container">
            <div class="row">

                <div class="col-md-3 cb">
                    Presentación: {{pdfName}}
                </div>
                <div class="col-md-1 " align="center">

                    <div class="checkbox-inline">

                        <label class="cbox">
                            <input type="checkbox" ng-model="synchronize" ng-change="pageStageChange(true)"> Sincronizar
                        </label>
                    </div>
                </div>
                <div class="col-md-2" align="center">
                    <div class="checkbox-inline">

                        <label class="cbox">
                            <input type="checkbox" ng-model="allowNavigation" ng-change="pageStageChange(true)">
                            Permitir Navegación
                        </label>
                    </div>
                </div>
                <div class="col-md-2" align="center">

                    <div type="button" class="btn-group">
                        <button id="pdfPrev" type="button" class="btn btn-info btn-xs" ng-click="prevPage()" ng-disabled="!sharing">
                            <b>Anterior</b>
                        </button>
                    </div>
                    <div type="button" class="btn-group">
                        <button id="pdfNext" type="button" class="btn btn-info btn-xs" ng-click="nextPage()" ng-disabled="!sharing">
                            <b>Siguiente</b>
                        </button>
                    </div>
                <div class="btn-as">
                       <b>
                            Página
                            <span id="page_num">{{pageNum}}</span>
                            /
                            <span id="page_count">{{pageTotal}}</span>
                       </b>
                    </div>
                </div>
                <div class="col-md-1" align="center">

                    <button id="stopSharing" class="btn btn-xs" ng-click="stopSharing()" ng-disabled="!sharing">Dejar de Compartir</button>
                    <button id="openSharing" class="btn btn-xs" ng-click="openShare()" ng-disabled="!sharing">Open View Screen</button>
                </div>
            </div>
        </div>
    </div>
</div>
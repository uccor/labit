<div ng-controller="professorCourse" id="professorCourse">
    <div class="page-header" align="center" style="margin-top: 0px">

        <b class="titulos">
            Cursos Disponibles
        </b>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-striped table-hover table-condensed">
                    <caption><p class="titulo"> Cursos </p></caption>
                    <thead>
                    <tr>
                        <th>Curso</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="c in courses" ng-click="">
                        <td>
                              <span editable-text="c.name" e-form="textBtnForm">
          {{ c.name || 'empty' }}
                             </span>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-default" ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
            </div>
        </div>
    </div>
</div>
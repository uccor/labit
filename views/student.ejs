<head>
    <title>Alumno</title>
</head>

<div class="bodyStudent container-fluid">
    <div class="row">

        <div class="col-md-3">
            <div id="contentShared" ng-controller="contentShared" class="col-md-12" style="background: white;">
                <br><br>
                <div> Seleccione ID Clase a la cual desea suscribirse:
                    <select class="form-control" ng-model="id_subscribedClass" ng-change="setCurrentClass(id_subscribedClass)">
                        <option ng-repeat="class in avaibleClasses">{{ class.id }}</option>
                    </select>
                    <!--input type="text" ng-model="id_subscribedClass"-->
                    <button class="btn" id="subcribeBTN" ng-click="subscribe_to_class()">Suscribirse</button>
                </div>
                <br><br><br>
            </div>

            <div ng-controller="QuestionControllerStudent">
                <h1>Preguntas:</h1>
                <div class="questions">
                    <div class="question" ng-repeat="question in questions">

                        <p class="status-{{question.status}} questionId" id="{{question.id}}" >{{question.text}}</p>

                        <div class="answers" ng-repeat="answer in question.answers">
                            <!--<input type="radio" id="{{$index}}" name="question-{{question.id}}" ng-click="sendResult(this)"/>-->
                            <input type="radio" id="{{$index}}" name="question-{{question.id}}" ng-click="sendResult(question.id,$index)"/>
                            <label class="ansLabel" for="{{$index}}">{{answer}}</label>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div ng-controller="pdfViewer" class="col-md-9">
            <div align="center">
                <div type="button" class="btn-group">
                    <button id="pdfPrev" type="button" class="btn btn-info btn-sm" ng-click="prevPage()" ng-disabled="!navigation"><b>Anterior</b></button>
                </div>
                <div type="button" class="btn-group">
                    <button id="pdfNext" type="button" class="btn btn-info btn-sm" ng-click="nextPage()" ng-disabled="!navigation"><b>Siguiente</b></button>
                </div>
                <span><b>
                        PÃ¡gina
                        <span id="page_num">{{pageNum}}</span>
                        /
                        <span id="page_count">{{pageTotal}}</span>
                    </b></span>
            </div>

            <div align="center">
                <canvas id="contentShareCanvas" class="canvasStudent"
                        height="633" width="490" style="width:100%; height: 100%;" ></canvas>
            </div>
        </div>




        
    </div>
</div>
